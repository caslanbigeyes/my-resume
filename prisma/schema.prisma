// 这是数据源配置，指定使用 MongoDB
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// 指定 Prisma Client 生成器
generator client {
  provider = "prisma-client-js"
}

// 数据模型定义
model Algorithm {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  url        String
  category   String?
  difficulty String?
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}